<?xml version="1.0" encoding="UTF-8"?>

<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="any">
    <!-- Home use: not specified / Lab use: Force the interface by PC IP -->
    <Interfaces>
      <NetworkInterface address="192.168.1.16" multicast="false"/>
    </Interfaces>

    <General>
      <!-- Robust for big ROS messages (PointCloud2, images, maps) -->
      <MaxMessageSize>65500B</MaxMessageSize>
      <!-- Home use: true / Lab use: false -->
      <AllowMulticast>false</AllowMulticast>
    </General>

  </Domain>
</CycloneDDS>
