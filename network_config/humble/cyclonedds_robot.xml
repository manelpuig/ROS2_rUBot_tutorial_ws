<?xml version="1.0" encoding="UTF-8"?>
<!-- cyclonedds_robot.xml (Raspberry Pi 4, wlan0)
     Intended for "robust lab" mode with:
       ROS_AUTOMATIC_DISCOVERY_RANGE=OFF
       ROS_STATIC_PEERS=<PC_IP>
-->
<CycloneDDS xmlns="https://cdds.io/config">
  <Domain id="any">

    <!-- Bind DDS to the robot WiFi interface -->
    <Interfaces>
      <NetworkInterface name="wlan0" multicast="false"/>
    </Interfaces>

    <General>
      <!-- Big ROS messages (PointCloud2, images, maps) -->
      <MaxMessageSize>65500B</MaxMessageSize>

      <!-- Not needed when using static peers -->
      <AllowMulticast>false</AllowMulticast>
    </General>

  </Domain>
</CycloneDDS>